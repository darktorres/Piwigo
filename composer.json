{
    "type": "project",
    "private": true,
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "ahand/mobileesp": "dev-master",
        "cweagans/composer-patches": "^2.0.0-beta2",
        "jcupitt/vips": "^2.4.1",
        "katzgrau/klogger": "^1.2.2",
        "openpsa/universalfeedcreator": "^v1.9",
        "pclzip/pclzip": "^2.8.2",
        "pelago/emogrifier": "^7.3",
        "phpmailer/phpmailer": "^6.9.3",
        "smarty/smarty": "^4.5.5",
        "tedivm/jshrink": "^1.7",
        "tubalmartin/cssmin": "^4.1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.6",
        "phpunit/phpcov": "^11.0.0",
        "phpunit/php-code-coverage": "^12.0.3",
        "rector/rector": "^2.0.9",
        "rector/swiss-knife": "^2.1.15",
        "symplify/easy-coding-standard": "^12.5.8",
        "vimeo/psalm": "^6.8.6"
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true
        },
        "optimize-autoloader": false
    },
    "extra": {
        "patches": {
            "smarty/smarty": {
                "Patch strftime": "patches/strftime.patch"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Piwigo\\": ""
        }
    }
}
