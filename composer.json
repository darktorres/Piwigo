{
    "type": "project",
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "ahand/mobileesp": "dev-master",
        "cweagans/composer-patches": "^2.0.0-beta2",
        "jcupitt/vips": "dev-master",
        "katzgrau/klogger": "^1.2.2",
        "openpsa/universalfeedcreator": "^v1.9",
        "pclzip/pclzip": "^2.8.2",
        "pelago/emogrifier": "^7.2",
        "phpmailer/phpmailer": "^6.9.2",
        "smarty/smarty": "^5.4.1",
        "tedivm/jshrink": "^1.7",
        "tubalmartin/cssmin": "^4.1.1"
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "patches": {
            "smarty/smarty": {
                "Patch strftime": "patches/strftime.patch"
            }
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.9",
        "symplify/easy-coding-standard": "^12.3.6",
        "phpunit/phpcov": "^10.0",
        "phpunit/php-code-coverage": "^11.0.7"
    }
}
